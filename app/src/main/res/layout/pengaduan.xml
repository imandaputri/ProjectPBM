<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    tools:context=".Pengaduan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_selanjutnya"
        android:layout_marginTop="190dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengaduan"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/poppinsreg"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/riwayat_txt"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirim Ke"
        android:textColor="#FF9F47"
        android:fontFamily="@font/poppinsreg"
        android:layout_marginStart="20dp"
        android:layout_marginTop="260dp"
        android:id="@+id/txt_kirimke"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_namabarang"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/txt_kirimke"
        android:text="cservice@looting.com"
        android:fontFamily="@font/poppinsreg"
        android:textColor="#000000"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:id="@+id/txt_emailcs"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Judul Pesan"
        android:textColor="#FF9F47"
        android:fontFamily="@font/poppinsreg"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/txt_emailcs"
        android:layout_marginTop="20dp"
        android:id="@+id/judulpesan"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_namabarang"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/judulpesan"
        android:hint="Judul keluhan/request"
        android:fontFamily="@font/poppinsreg"
        android:textColor="#000000"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:id="@+id/edtJudulpesan"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isi Pesan"
        android:textColor="#FF9F47"
        android:fontFamily="@font/poppinsreg"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/edtJudulpesan"
        android:layout_marginTop="20dp"
        android:id="@+id/txt_isipesan"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_deskbarang"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_below="@+id/txt_isipesan"
        android:hint="Masukkan keluhan/request Anda"
        android:gravity="top"
        android:fontFamily="@font/poppinsreg"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:id="@+id/edtIsipesan"/>

    <Button
        android:id="@+id/btn_kirim"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_below="@+id/edtIsipesan"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/button_next"
        android:fontFamily="@font/poppinsreg"
        android:text="Kirim"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold" />


</RelativeLayout>