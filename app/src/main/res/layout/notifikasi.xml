<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    tools:context=".Notifikasi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_selanjutnya"
        android:layout_marginTop="190dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifikasi"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsreg"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:id="@+id/riwayat_txt"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terbaru"
        android:textColor="#FF9F47"
        android:fontFamily="@font/poppinsreg"
        android:layout_marginStart="20dp"
        android:layout_marginTop="270dp"
        android:id="@+id/txt_kirimke"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_notif"
        android:layout_marginTop="300dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/txt_notif"
        android:textColor="#000000"
        android:fontFamily="@font/poppinsreg"
        android:padding="10dp"
        android:id="@+id/notifikasi"
        />

    <Button
        android:id="@+id/btn_kembali3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_below="@+id/notifikasi"
        android:layout_marginTop="290dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/button_next"
        android:fontFamily="@font/poppinsreg"
        android:text="Kembali"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>