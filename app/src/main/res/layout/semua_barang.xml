<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    tools:context=".SemuaBarang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_selanjutnya"
        android:layout_marginTop="190dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semua Barang"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/poppinsreg"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:id="@+id/semuabarang_txt"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/rect_barang"
        android:paddingLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/tas"
        android:paddingLeft="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Tas"
        android:fontFamily="@font/poppinsreg"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="23sp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="410dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/judulbarang"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Ditemukan tas ransel berwarna biru"
        android:fontFamily="@font/poppinsreg"
        android:textSize="17sp"
        android:layout_marginTop="386dp"
        android:layout_marginBottom="350dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="34dp"
        android:id="@+id/deskripsibarang"/>

    <Button
        android:id="@+id/btn_kembali2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="680dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/button_next"
        android:fontFamily="@font/poppinsreg"
        android:text="Kembali"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>